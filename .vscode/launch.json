{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "(gdb) Launch NDN example",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/src/ndnSIM/examples/${fileBasenameNoExtension}",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/build/src/ndnSIM/examples",
      "preLaunchTask": "Build",
      "environment": [
          {
              "name": "LD_LIBRARY_PATH",
              "value": "./build/lib/"
          }
      ],
      "externalConsole": true,
      "MIMode": "gdb",
      "setupCommands": [
          {
              "description": "Enable pretty-printing for gdb",
              "text": "-enable-pretty-printing",
              "ignoreFailures": true
          }
      ]
    }, 
    {
      "name": "Debug ndnSIM",
      "type": "cppdbg",
      "request": "launch",
      "program": "/usr/bin/python",  // Path to Python interpreter
      "args": [
        "${workspaceFolder}/waf",  // Path to waf script
        "--run",
        "agg-aimd-test"
      ],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "externalConsole": true,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "Build ndnSIM",
      "miDebuggerPath": "/usr/bin/gdb"
    }
  ]
}